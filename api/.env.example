# /api/.env.example
APP_ENV=local
APP_DEBUG=true
APP_KEY=

# HTTP
APP_URL=http://localhost

# LOGGING
LOG_CHANNEL=stack
LOG_LEVEL=debug

# CACHE / SESSION / QUEUE
CACHE_DRIVER=array
CACHE_STORE=array
SESSION_DRIVER=array
QUEUE_CONNECTION=sync

# DB (dev override â€” production uses /opt/phpgrc/shared/config.php)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=phpgrc
DB_USERNAME=phpgrc
DB_PASSWORD=CHANGE_ME

# CORE SETTINGS
CORE_SETTINGS_STUB_ONLY=true

# RBAC
CORE_RBAC_MODE=stub          # stub | persist
CORE_RBAC_PERSISTENCE=false  # legacy boolean; if true, acts like mode=persist
CORE_RBAC_REQUIRE_AUTH=false
