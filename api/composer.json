{
  "name": "phpgrc/api",
  "type": "project",
  "description": "phpGRC Laravel 11 API (monorepo backend)",
  "license": "MIT",
  "require": {
    "php": "^8.3",
    "laravel/framework": "^11.0",
    "laravel/sanctum": "^4.0",
    "fruitcake/laravel-cors": "^4.0",
    "guzzlehttp/guzzle": "^7.8|^8.0",
    "nesbot/carbon": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^1.11",
    "vimeo/psalm": "^5.25",
    "squizlabs/php_codesniffer": "^3.9",
    "enlightn/enlightn": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "@php artisan package:discover --ansi || true"
    ],
    "test": "phpunit -c phpunit.xml.dist"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
