{
  "name": "phpgrc/api",
  "type": "project",
  "description": "phpGRC Laravel API backend",
  "license": "MIT",
  "require": {
    "php": "^8.3",
    "laravel/framework": "^11.0",
    "laravel/sanctum": "^4.0"
  },
  "require-dev": {
    "enlightn/enlightn": "^2.10",
    "larastan/larastan": "^2.11",
    "laravel/pint": "^1.17",
    "mockery/mockery": "^1.6",
    "nunomaduro/collision": "^8.1",
    "phpstan/phpstan": "^1.11",
    "phpunit/phpunit": "^11.5",
    "psalm/plugin-laravel": "^3.0",
    "vimeo/psalm": "^6.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "@php scripts/composer/run-if-artisan.php package:discover --ansi"
    ],
    "post-create-project-cmd": [
      "@php scripts/composer/run-if-artisan.php key:generate --ansi"
    ],
    "test": "vendor/bin/phpunit",
    "lint": "vendor/bin/pint -v",
    "stan": "vendor/bin/phpstan analyse --memory-limit=-1",
    "psalm": "vendor/bin/psalm --no-cache",
    "check": [
      "@lint",
      "@stan",
      "@psalm"
    ]
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "platform-check": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
