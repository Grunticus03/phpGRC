{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://phpgrc/schema/module.schema.json",
  "title": "phpGRC Module Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "version"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]{2,48}$",
      "description": "Module short name in lowercase kebab-case (e.g., risks)"
    },
    "displayName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 80
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[0-9A-Za-z.-]+)?(\\+[0-9A-Za-z.-]+)?$",
      "description": "SemVer"
    },
    "description": {
      "type": "string",
      "maxLength": 280
    },
    "requires": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z][a-z0-9-]{2,48}$"
      },
      "uniqueItems": true,
      "default": []
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z][a-z0-9_.-]+$"
      },
      "uniqueItems": true,
      "default": []
    },
    "migrations": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1,
        "pattern": "^(?!.*\\.\\./).+"
      },
      "uniqueItems": true,
      "default": []
    },
    "settings": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "defaults": {
          "type": "object",
          "additionalProperties": true,
          "description": "Keyâ†’default value map"
        }
      },
      "default": { "defaults": {} }
    },
    "ui": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "nav": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["label", "path"],
            "properties": {
              "label": { "type": "string", "minLength": 1, "maxLength": 40 },
              "path":  { "type": "string", "pattern": "^\\/" },
              "order": { "type": "integer" }
            }
          },
          "default": []
        }
      },
      "default": { "nav": [] }
    },
    "openapi": {
      "type": "string",
      "pattern": "^(?!.*\\.\\./).+\\.(yaml|yml|json)$"
    },
    "serviceProvider": {
      "type": "string",
      "minLength": 1,
      "description": "FQCN to module ServiceProvider"
    },
    "health": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "endpoint": { "type": "string", "pattern": "^\\/" }
      }
    },
    "enabled": {
      "type": "boolean",
      "default": true
    }
  }
}
