<?xml version="1.0"?>
<psalm
    errorLevel="8"
    resolveFromConfigFile="true"
    cacheDirectory="build/psalm"
    findUnusedCode="false"
>
    <projectFiles>
        <directory name="app" />
    </projectFiles>

    <plugins>
        <pluginClass class="Psalm\LaravelPlugin\Plugin"/>
    </plugins>

    <stubs>
        <file name="stubs/laravel-sanctum-polyfill.php"/>
    </stubs>

    <issueHandlers>
        <!-- Do not require #[\Override] in vendor code -->
        <MissingOverrideAttribute errorLevel="suppress">
            <directory name="vendor" />
        </MissingOverrideAttribute>
    </issueHandlers>
</psalm>

