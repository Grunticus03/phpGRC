<?xml version="1.0" encoding="UTF-8"?>
<psalm
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="https://getpsalm.org/schema/config"
  xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
  resolveFromConfigFile="true"
  errorLevel="8"
  cacheDirectory="build/psalm"
  findUnusedCode="false"
>
  <projectFiles>
    <directory name="app"/>
  </projectFiles>

  <plugins>
    <pluginClass class="Psalm\LaravelPlugin\Plugin"/>
  </plugins>

  <stubs>
    <file name="stubs/laravel-sanctum-polyfill.php"/>
  </stubs>

  <issueHandlers>
    <MissingOverrideAttribute errorLevel="suppress">
      <name="app/Console/Kernel.php"/>
      <name="app/Http/Requests/Admin/UpdateSettingsRequest.php" />
      <name="app/Http/Requests/Avatar/StoreAvatarRequest.php" />
      <name="app/Http/Requests/Evidence/StoreEvidenceRequest.php" />
      <name="app/Http/Requests/Rbac/StoreRoleRequest.php" />
      <name="app/Http/Responses/CsvStreamResponse.php" />
      <name="app/Providers/ConfigOverlayServiceProvider.php" />
      <name="app/Providers/EventServiceProvider.php" />
    </MissingOverrideAttribute>
  </issueHandlers>
</psalm>
